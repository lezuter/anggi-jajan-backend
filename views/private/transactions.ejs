<div class="page-container">
    <h1>Monitor Transaksi</h1>
    <div class="transaction-viewer">
        <div class="transaction-viewer__toolbar">
            <div class="filter-controls" id="filterControls">
                <button class="btn btn-secondary active" data-filter="all">Semua</button>
                <button class="btn btn-secondary" data-filter="today">Hari Ini</button>
                <button class="btn btn-secondary" data-filter="month">Bulan Ini</button>
                <button class="btn btn-secondary" data-filter="year">Tahun Ini</button>
            </div>
            <button class="btn btn-secondary" id="refreshBtn">
                <svg fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" width="20" height="20"
                    style="color: var(--primary-green);">
                    <path
                        d="M12 4V1L8 5l4 4V6c3.31 0 6 2.69 6 6s-2.69 6-6 6-6-2.69-6-6H4c0 4.42 3.58 8 8 8s8-3.58 8-8-3.58-8-8-8z" />
                </svg>
                Refresh Data
            </button>
        </div>
        <div class="transaction-viewer__table-wrapper">
            <table>
                <thead>
                    <tr>
                        <th>ID Transaksi</th>
                        <th>Nama Produk</th>
                        <th>User ID</th>
                        <th>Total Bayar</th>
                        <th>Status</th>
                        <th>Dibuat Oleh</th>
                        <th>Waktu</th>
                        <th>SN</th>
                        <th>Pesan</th>
                    </tr>
                </thead>
                <tbody id="transactionsTableBody">
                </tbody>
            </table>
        </div>
        <div class="transaction-viewer__footer">
            <div class="entries-selector">
                <label for="limitSelect">Tampilkan:</label>
                <select id="limitSelect">
                    <option value="25" selected>25</option>
                    <option value="100">100</option>
                    <option value="200">200</option>
                </select>
                <span>baris</span>
            </div>
            <div class="pagination-controls" id="paginationControls">
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.socket.io/4.7.5/socket.io.min.js"></script>
<script src="/js/transactions.js"></script>